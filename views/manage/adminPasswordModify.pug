extends common
block bodyNode
    script(type="text/javascript").
        $(function(){
            $("a.list-group-item").eq(1).css("background-color","#a7d6f1")
        })
    include public/nav
    .container
        .row
            .col-md-3
                include public/manageList
            .col-md-9.thumbnail.rightContent
                h2 修改登录密码
                .well 您可以在本页面修改您的登录密码
                form.form-horizontal.adminPasswordModify(method="post", action="/manage/adminPasswordModifyInfo")
                    .form-group
                        .col-md-3.text-right
                            label.control-label(for="oldPwd") 旧密码：
                        .col-md-6
                            input#oldPwd.form-control(type="password", name="oldPwd")
                        .col-md-3.help-block

                    .form-group
                        .col-md-3.text-right
                            label.control-label(for="newPwd") 新密码：
                        .col-md-6
                            input#newPwd.form-control(type="password", name="newPwd")
                        .col-md-3.help-block

                    .form-group
                        .col-md-3.text-right
                            label.control-label(for="oldPwd") 确认密码：
                        .col-md-6
                            input#okPwd.form-control(type="password", name="okPwd")
                        .col-md-3.help-block

                    .form-group
                        .col-md-6.col-md-offset-3
                            button.btn.btn-primary 确认修改

    include ../public/copyright